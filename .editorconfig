# EditorConfig Template

# Top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# JavaScript/TypeScript
[*.{js,jsx,ts,tsx}]
indent_size = 2
quote_type = single

# Python
[*.py]
indent_size = 4

# YAML
[*.{yml,yaml}]
indent_size = 2

# JSON
[*.json]
indent_size = 2

# HTML/XML
[*.{html,xml}]
indent_size = 2

# CSS/SCSS
[*.{css,scss,sass}]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

# Makefile
[Makefile]
indent_style = tab

# Batch files
[*.{bat,cmd}]
end_of_line = crlf
